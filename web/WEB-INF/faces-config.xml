<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <converter>
        <converter-id>com.kynomics.ReplaceConverter</converter-id>
        <converter-class>
            com.kynomics.converter.ReplaceConverter
        </converter-class>
    </converter>
    <!-- Settings for application -->
    <application>
        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <message-bundle>com.kynomics.bundles.messages</message-bundle>
        <resource-bundle>
            <base-name>com.kynomics.bundles.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>
    
    
    
</faces-config>
